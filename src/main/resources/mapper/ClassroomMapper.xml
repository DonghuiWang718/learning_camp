<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.learning_camp.mapper.ClassroomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.learning_camp.entity.Classroom">
        <id column="classroom_id" property="classroomId" />
        <result column="classroom_name" property="classroomName" />
        <result column="classroom_capacity" property="classroomCapacity" />
        <result column="classroom_address" property="classroomAddress" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        classroom_id, classroom_name, classroom_capacity, classroom_address
    </sql>

</mapper>
