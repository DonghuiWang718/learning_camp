<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.learning_camp.mapper.PlanCourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.learning_camp.entity.PlanCourse">
        <id column="pc_id" property="pcId" />
        <result column="plan_id" property="planId" />
        <result column="course_name" property="courseName" />
        <result column="course_content" property="courseContent" />
        <result column="course_duration" property="courseDuration" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        pc_id, plan_id, course_name, course_content, course_duration
    </sql>

</mapper>
