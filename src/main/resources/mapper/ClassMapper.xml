<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.learning_camp.mapper.ClassMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.learning_camp.entity.Class">
        <id column="class_id" property="classId" />
        <result column="plan_id" property="planId" />
        <result column="class_name" property="className" />
        <result column="class_amount" property="classAmount" />
        <result column="class_capacity" property="classCapacity" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        class_id, plan_id, class_name, class_amount, class_capacity
    </sql>

</mapper>
